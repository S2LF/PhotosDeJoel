{% extends 'base.html.twig' %}

{% block title %}Les Photos de Joël | Créer catégorie{% endblock %}

{% block body %}

{% include "admin/adminNav.html.twig" %}


<h1>Espace Admin</h1>
<h2>Créer/Modifier une catégorie</h2>

{{ form_start(form)}}

    {{ form_row(form.titre)}}

    {% if 'editCat' in app.request.uri %}
        <h3>Photo de couverture actuelle : </h3>
        <img style="width: 100px" src="{{ asset('img/' ~ cat.photoCoverPath ) }}" alt="{{ cat.titre }}">
    {% endif %}
    {{ form_row(form.photo_cover_path)}}

    <input type="submit" value="Valider">
{{ form_end(form)}}
    
{% endblock %}
