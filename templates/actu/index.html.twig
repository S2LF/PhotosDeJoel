{% extends 'base.html.twig' %}

{% block title %}Les Photos de Joël | Actualités{% endblock %}

{% block body %}
<h1 class="text-center">Actualités</h1>

<section class="row text-center">
    {% if actus|length == 0 %}
    <p>
        <h3 class="text-center">
            Aucune actualité
        </h3>
    </p>
    {% else %}
        <section class="m-auto">
            {% for actu in actus %}
                <article class="m-3">
                    <div class="p-2 d-flex">
                        <div>
                            {% if actu.path %}                    
                                <figure class="m-1 mr-2">
                                <img style="width: 100px;" src="{{ asset('/img/' ~ actu.path) }}" alt="">
                                </figure>
                            {% endif %}
                        </div>
                        <div>
                            <h3>{{actu.titre}}<small> - {{actu.dateCreation |date('d/m/Y') }}</small></h3>
                            <p>
                                {{ actu.contenu | raw}}
                            </p>                        
                        </div>
                    </div>
                </article>
            {% endfor %}
        </section>    
    {% endif %}
</section>

{% endblock %}