{% extends 'base.html.twig' %}

{% block title %}Les Photos de Joël | Catégories de photos{% endblock %}

{% block body %}
<section class="row justify-content-center mx-auto text-center">
    {% for cat in cats %}
    <article class="m-3 col-2 rounded border">
        <a href="{{ path('admin_cat_photos', {'id':cat.id}) }}">
            <h3>{{ cat.titre }}
                <a href="{{ path('admin_edit_cat', {'id':cat.id})}}"></a>
            </h3>
        </a>
        <a href="{{ path('admin_cat_photos', {'id':cat.id}) }}">

            {% if cat.photoCoverPath == null %}
                <img style="width: 100px" src="{{ asset('img/default/Default.png' ) }}" alt="{{ cat.titre }}">
            {% else %}
                <img style="width: 100px" src="{{ asset('img/' ~ cat.photoCoverPath ) }}" alt="{{ cat.titre }}">
            {% endif %}

            <!-- {% set photos = cat.photos|sort((a, b) => a.position <=> b.position )%}

                {% if photos != null %}
                {% set p = photos|first %}
                <img style="width: 100px" src="{{ asset('img/' ~ p.path ) }}" alt="{{ cat.titre }}">
                {% else %}
                <img style="width: 100px" src="{{ asset('img/default/Default.png' ) }}" alt="{{ cat.titre }}">
                {% endif %} -->
        </a>
    </article>
    {% endfor %}
</section>

{% endblock %}