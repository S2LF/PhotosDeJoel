{% extends 'base.html.twig' %}

{% block title %}Les Photos de JoÃ«l | Expositions{% endblock %}

{% block body %}
<section class="row text-center">
    {% if expos|length == 0 %}
    <p>
        <h3 class="text-center">
            Aucune exposition
        </h3>
    </p>
    {% else %}
        <section class="m-auto">
            {% for expo in expos %}
                <article class="m-3">
                    <div class="p-2 d-flex">
                        <div>
                            {% if expo.path %}                    
                                <figure class="m-1 mr-2">
                                <img style="width: 100px;" src="{{ asset('/img/' ~ expo.path) }}" alt="">
                                </figure>
                            {% endif %}
                        </div>
                        <div>
                            <h3>{{expo.titre}}</h3> <span>{{expo.dateCreation |date('d/m/Y') }}</span>
                            <p>
                                Date de l'exposition : {{ expo.dateEvent |date('d/m/Y') }}
                                <br>
                                {{ expo.contenu | raw}}
                            </p>                        
                        </div>
                    </div>
                </article>
            {% endfor %}
        </section>    
    {% endif %}
</section>

{% endblock %}